{
    "name": "resnet34_baseline_bestfitting",
    "n_gpu": 1,

    "arch": {
        "type": "Resnet",
        "args": {
            "backbone": "resnet34",
            "num_classes": 19,
            "in_channels": 3,
            "dropout": true
        }
    },
    "data_loader": {
        "type": "HPADataLoader",
        "args":{
            "data_dir": "data/hpa-single-cell-image-classification",
            "batch_size": 8,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4,
            "img_size": 512,
            "in_channels": 3,
            "aug_version": null
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 3e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "focal_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "MultiStepLR",
        "args": {
            "milestones": [25, 5, 5, 5, 5],
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 50,

        "save_dir": "saved/1.0.0_resnet34_baseline_bestfitting",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true,

        "train_batches": 0.1,
        "val_batches": 1.0,
        "test_batches": 1.0
    }
}
